{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "kopsK8sEC2NodePerms",
      "Effect": "Allow",
      "Action": [
        "ec2:DescribeInstances",
        "ec2:DescribeRegions"
      ],
      "Resource": [
        "*"
      ]
    },
    {
      "Sid": "kopsK8sS3GetListBucket",
      "Effect": "Allow",
      "Action": [
        "s3:GetBucketLocation",
        "s3:ListBucket"
      ],
      "Resource": [
        "arn:aws:s3:::kayan-kops-state2"
      ]
    },
    {
      "Sid": "kopsK8sS3NodeBucketSelectiveGet",
      "Effect": "Allow",
      "Action": [
        "s3:Get*"
      ],
      "Resource": [
        "arn:aws:s3:::kayan-kops-state2/k8s.ifritltd.co.uk/addons/*",
        "arn:aws:s3:::kayan-kops-state2/k8s.ifritltd.co.uk/cluster.spec",
        "arn:aws:s3:::kayan-kops-state2/k8s.ifritltd.co.uk/config",
        "arn:aws:s3:::kayan-kops-state2/k8s.ifritltd.co.uk/instancegroup/*",
        "arn:aws:s3:::kayan-kops-state2/k8s.ifritltd.co.uk/pki/issued/*",
        "arn:aws:s3:::kayan-kops-state2/k8s.ifritltd.co.uk/pki/private/kube-proxy/*",
        "arn:aws:s3:::kayan-kops-state2/k8s.ifritltd.co.uk/pki/private/kubelet/*",
        "arn:aws:s3:::kayan-kops-state2/k8s.ifritltd.co.uk/pki/ssh/*",
        "arn:aws:s3:::kayan-kops-state2/k8s.ifritltd.co.uk/secrets/dockerconfig"
      ]
    },
    {
      "Sid": "kopsK8sECR",
      "Effect": "Allow",
      "Action": [
        "ecr:GetAuthorizationToken",
        "ecr:BatchCheckLayerAvailability",
        "ecr:GetDownloadUrlForLayer",
        "ecr:GetRepositoryPolicy",
        "ecr:DescribeRepositories",
        "ecr:ListImages",
        "ecr:BatchGetImage"
      ],
      "Resource": [
        "*"
      ]
    }
  ]
}